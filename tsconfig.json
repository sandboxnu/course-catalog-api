{
  "compilerOptions": {
    // Don't output the built files - Babel will do that. Tsc just for checking.
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2021"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "module": "node16",
    "moduleResolution": "node16"
  },
  "exclude": ["node_modules"]
}
