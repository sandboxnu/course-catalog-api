{
  "compilerOptions": {
    //// Module settings (how TS resolves importing things)
    "target": "ESNext",
    "module": "NodeNext",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // "verbatimModuleSyntax": true,  // this setting has _good_ features BUT would require full ESM
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext"],

    //// Strictness settings (how angry TS gets at types)
    "strict": true,
    // "noUncheckedIndexAccess": true,   // good setting but does get in your way (a little)
    "noImplicitOverride": true,

    //// Build settings (how TS transpiles the JS)
    "paths": {
      "$/services/*": ["./services/*"],
      "$/router/*": ["./router/*"]
      "$/types/*": ["./types/*"]
    },
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "cache",
    "logs",
    "public",
    "infrastructure",
    "data",

    "scrapers"
  ]
}
