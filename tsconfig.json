{
  "compilerOptions": {
    "target": "ESNext", // Use the latest ECMAScript features.
    "module": "NodeNext", // Use Node’s native ESM support.
    "moduleResolution": "NodeNext", // Align TS module resolution with Node’s.
    "moduleDetection": "force",
    "lib": ["ESNext"], // Include the latest built-in APIs.
    "strict": true, // Enable strict type-checking.
    "esModuleInterop": true, // For easier interop with CommonJS modules.
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rewriteRelativeImportExtensions": true,
    "resolveJsonModule": true, // Allow importing JSON files.
    "outDir": "dist", // Specify your build output directory.
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
