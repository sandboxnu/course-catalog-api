{
  "compilerOptions": {
    // Don't output the built files - Babel will do that. Tsc just for checking.
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["dom", "scripthost", "es2021"],
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "exclude": ["node_modules"]
}
