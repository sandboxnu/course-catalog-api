{
  "compilerOptions": {
    // Don't output the built files - Babel will do that. Tsc just for checking.
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "lib": ["dom", "es5", "scripthost", "es2015.promise"],
    "skipLibCheck": true
  },
  "include": ["./scrapers/**/*"],
  "exclude": ["node_modules"]
}
